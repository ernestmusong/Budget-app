<main>
  <%= render partial: 'shared/nav', locals: { text: 'Back', url: user_categories_path(current_user), heading: 'LOGIN'  } %>
     
    <% if @categories.blank? %>
      <p>Your categories list is currently empty!</p><br>
    <% else %>
    <ul id="list" class="list">
    <% @categories.each do |c| %>
      <li class="list_item">
            <%= link_to %>
              <div>
                <div class="photo">
                    <% if c.icon.present? %>
                    <%= image_tag c.icon, class: "profile_img" %>
                    <% else %>
                    <%= image_tag 'https://www.pngkey.com/png/detail/233-2332677_image-500580-placeholder-transparent.png', class: "profile_img" %>
                    <% end %>
                </div>
                <div class="user_name">
                    <p><%= c.name %></p>
                    <p>c.created_at</p>
                </div>
              </div>
              <p>total amount</p>
            <% end %>
      </li>
    <% end %>
    </ul>
    <% end %>
    <div class="food_btn_wrap">
       <%= link_to "Add new category",   class: "add_btn" %>
    </div>
</main>